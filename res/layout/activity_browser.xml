<?xml version="1.0" encoding="utf-8"?>     
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent" 
    android:layout_width="fill_parent" >
    
   <Button
        android:id="@+id/button_select_directory"
        android:layout_width="fill_parent"
        android:layout_height="60sp"
        android:layout_marginRight="4sp"
        android:layout_marginLeft="4sp"
        android:layout_marginTop="8sp"
        android:text="@string/button_select_directory" />
        
  <Button
        android:id="@+id/button_new_directory"
        android:layout_gravity="bottom"
        android:layout_below="@+id/button_select_directory"
        android:layout_width="fill_parent"
        android:layout_height="60sp"
        android:layout_marginRight="4sp"
        android:layout_marginLeft="4sp"
        android:layout_marginTop="8sp"
        android:text="@string/button_new_directory" />
  
   <ListView
        android:id="@+id/file_list_view"
        android:layout_gravity="bottom"
        android:layout_below="@+id/button_new_directory"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:fillViewport="true" >
   </ListView>
   
   <TextView
        android:id="@+id/simple_list_item_1"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content" />
</RelativeLayout>
    